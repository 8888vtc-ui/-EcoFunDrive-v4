# API Keys (RENOMMER EN .env ET COMPLETER) ECOFUNDRIVE V3 - Variables d'Environnement

# ===========================================
# API Keys - AI Services
# ===========================================
# Claude 4.5 (Anthropic)
ANTHROPIC_API_KEY=sk-ant-votre_cle_anthropic_ici

# GPT-4 (OpenAI)
OPENAI_API_KEY=sk-votre_cle_openai_ici

# Replicate
REPLICATE_API_TOKEN=votre_cle_replicate_ici

# Netlify
NETLIFY_TOKEN=votre_netlify_token_ici
NETLIFY_SITE_ID=votre_netlify_site_id_ici

# Replicate (Flux Pro - Images)
REPLICATE_API_KEY=r8_votre_cle_replicate_ici

# ===========================================
# Netlify Configuration
# ===========================================
# Token d'authentification Netlify
NETLIFY_TOKEN=nfp_votre_token_netlify_ici

# ID du site Netlify
NETLIFY_SITE_ID=votre_site_id_netlify

# ===========================================
# Site Configuration
# ===========================================
# URL principale du site
SITE_URL=https://ecofundrive.com

# Locale par défaut
DEFAULT_LOCALE=fr

# Langues supportées
SUPPORTED_LOCALES=fr,en,he

# ===========================================
# Performance & Analytics
# ===========================================
# Activation du cache Edge
ENABLE_EDGE_CACHE=true

# Qualité des images (1-100)
IMAGE_QUALITY=85

# Google Tag Manager
GTM_ID=GTM-XXXXXXX

# Plausible Analytics
PLAUSIBLE_DOMAIN=ecofundrive.com

# ===========================================
# Generation Settings
# ===========================================
# Nombre maximum d'itérations de validation
MAX_ITERATIONS=2

# Activation de la génération parallèle
PARALLEL_GENERATION=true

# Nombre de mots par section
SECTION_WORD_COUNT=400

# ===========================================
# Development
# ===========================================
# Mode développement
NODE_ENV=development

# Port de développement local
PORT=4321

# Activation du debug
DEBUG=false

# ===========================================
# Security
# ===========================================
# Secret pour les sessions
SESSION_SECRET=votre_secret_session_ici

# Clé de cryptage
ENCRYPTION_KEY=votre_cle_cryptage_ici

# ===========================================
# Optional - External Services
# ===========================================
# Redis Cache (optionnel)
REDIS_URL=redis://localhost:6379

# Sentry (error tracking)
SENTRY_DSN=votre_dsn_sentry_ici

# Slack Webhook (notifications)
SLACK_WEBHOOK_URL=votre_webhook_slack_ici
