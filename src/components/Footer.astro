  company: {
    title: 'SEO Site Generator',
    items: [
      { label: 'Home', href: '/' },
      { label: 'Generator', href: '/generator' },
      { label: 'Privacy Policy', href: '/politique-confidentialite' }
    ]
  },
  guides: {
    title: 'Resources',
    items: [
      { label: 'User guide', href: '/generator' },
      { label: 'FAQ', href: '#' },
      { label: 'Blog', href: '#' }
    ]
  },
  services: {
    title: 'Features',
    items: [
      { label: 'Site generation', href: '/generator' },
      { label: 'SEO audit', href: '#' },
      { label: 'Internal linking', href: '#' },
      { label: 'Automatic deploy', href: '#' }
    ]
  },
  legal: {
    title: 'Legal',
    items: [
      { label: 'Privacy Policy', href: '/politique-confidentialite' },
      { label: 'Cookie Policy', href: '/politique-cookies' }
    ]
